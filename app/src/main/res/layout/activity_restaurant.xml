<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="3"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bFirstDishes"
            android:text="Перші страви"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bSecondDishes"
            android:text="Другі страви"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bSalat"
            android:text="Салати"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bGarnishes"
            android:text="Гарніри"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bDessert"
            android:text="Десерти"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bComplex"
            android:text="Комплексі обіди"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bHotDrink"
            android:text="Гарячі напої"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bJuice"
            android:text="Соки"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bWaterNogaz"
            android:text="Вода негазована"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bWaterGaz"
            android:text="Вода газована"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bBeer"
            android:text="Пиво"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/bWine"
            android:text="Вино"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="6"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lvOrderList"
            android:layout_weight="1"
            android:clickable="false"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Підтвердити замовлення"
            android:id="@+id/bConfirm"
            android:layout_weight="5"
            android:background="#ff5e5e5e"
            android:textColor="#ffffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    </LinearLayout>