<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.7"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прізвище"
            android:textSize="18sp">
        </TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etSecondNameManagerUser"
            android:ems="5"
            android:editable="true"
            android:textSize="18sp"
            android:inputType="textPersonName">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ім'я"
            android:textSize="18sp">
        </TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etFirstNameManagerUser"
            android:ems="5"
            android:editable="true"
            android:textSize="18sp"
            android:inputType="textPersonName">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Логін" >
        </TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etLoginManagerUser"
            android:ems="4"
            android:editable="true"
            android:textSize="18sp">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Пароль" >
        </TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etPasswordMangerUser"
            android:ems="4"
            android:editable="true"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="4"
        android:layout_weight="1.8"
        android:background="#ff5e5e5e"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ім'я"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Прізвище"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Логін"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Пароль"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center" />
    </LinearLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lvUserManagerUser"
        android:layout_weight="0.7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1.8"
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Додати"
            android:id="@+id/bAddUserManagerUser"
            android:background="#ff5e5e5e"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Показати"
            android:id="@+id/bShowManagerUser"
            android:background="#ff5e5e5e"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Видалити"
            android:id="@+id/bDeleteManagerUser"
            android:background="#ff5e5e5e"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />
    </LinearLayout>
</LinearLayout>
